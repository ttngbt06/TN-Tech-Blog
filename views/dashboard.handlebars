<div class="mb-5 pt-3">
    <a href="/dashboard/create/">
        <button id="create-post" class="button is-primary is-pulled-right">Create Post</button>
    </a>
    <h2 class="title pb-4 colordas">Dashboard: Your Posts</h2>
    <hr>
    {{#if posts.length}}
        {{#each posts as |post|}}
            <div class="mb-5">
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}">
                    <button class="button is-warning">Edit Post</button>
                </a>
            </div>
        {{/each}}
    {{else}}
        <h6 class="pb-4 has-text-centered is-italic">You do not currently have any posts</h6>
    {{/if}}
</div>
 